<!DOCTYPE html>
<html>
  <head>
    <title>Intro to Node and MongoDB</title>
  </head>
  <link rel="stylesheet" href="css/index.css" />
  <body>
    <div class="container">
      <form method="get" action="/">
        <button type="submit" class="btn">Add New</button>
      </form>
      <form method="get" action="/getMarks">
        <button type="submit" class="btn">getAllMarks</button>
      </form>
      <form method="get" action="/dsbdaGreaterThan20">
        <button type="submit" class="btn">getDsbdaGreaterThan20</button>
      </form>

      <form method="get" action="/wadccGreaterThan40">
        <button type="submit" class="btn">getWadccGreaterThan40</button>
      </form>
    </div>
    <br />
    <% if(student!=null) { %>
    <table border="1px">
      <tr>
        <th>Name</th>
        <th>Roll no</th>
        <th>WAD</th>
        <th>DSBDA</th>
        <th>CNS</th>
        <th>CC</th>
        <th>AI</th>
      </tr>
      <% student.forEach(function(item){ %>
      <tr>
        <td><%= item.name%></td>
        <td><%= item.rollno%></td>
        <td><%= item.wad_marks%></td>
        <td><%= item.dsbda_marks%></td>
        <td><%= item.cns_marks%></td>
        <td><%= item.cc_marks%></td>
        <td><%= item.ai_marks%></td>
        <td>
          <form method="post" action="/deleteStudent/<%= item._id %>">
            <button type="submit" class="btn">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </body>
</html>
